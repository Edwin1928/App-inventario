{{#each errors}}
 <div class="alert alert-danger alert-dismissible fade show" role="alert">
   {{text}}
   <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
 </div>
{{/each}}
<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Nuevo producto</h3>
        </div>
    <div class="card-body">
        <form action="/productos/nuevo-producto" method="POST">
            <div class = "form-group p-2">
                <input type="text" name="Nombre" id="" class="form-control" placeholder="Nombre" autofocus>
            </div>

            <div class = "form-group p-2">
                <input type="text" name="Categoria" id="" class="form-control" placeholder="Categoria" autofocus>
            </div>
            
            <div class = "form-group p-2">
                <input type="text" name="Proveedor" id="" class="form-control" placeholder="Proveedor" autofocus>
            </div>
            
            <div class = "form-group p-2">
                <input type="text" name="Precio" id="" class="form-control"  placeholder="Precio">
            </div>
            
            <div class = "form-group p-2">
                <input type="number" name="Existencia" id="" class="form-control" placeholder="Existencia" autofocus>
            </div>
            
            <div class="form-group p-2">
                <button class="btn btn-primary btn-block" type="submit">
                    Guardar
                </button>
            </div>
        </form>
    </div>
    </div>
</div>